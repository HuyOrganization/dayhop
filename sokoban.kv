<Box>
    canvas:
        Rectangle:
            pos: self.pos
            size: 50,50
            source: self.image_
<Player>:
    canvas:
        Rectangle:
            pos: self.pos
            size: 40,50
            source: self.image_

<Door>:
    canvas:
        Rectangle:
            pos: self.pos
            size: 30, 30
            source: self.image_


<SokobanGame>:
    player: player1

    box1: box1
    box2: box2
    box3: box3
    box4: box4

    door1: door1
    door2: door2
    door3: door3
    door4: door4

    Label:
        font_size: 50
        center_x: root.width / 20
        top: root.top
        text: str(root.move_)
    Player:
        id: player1
    Box:
        id: box1
    Box:
        id: box2
    Box:
        id: box3
    Box:
        id: box4
    Door:
        id: door1
    Door:
        id: door2
    Door:
        id: door3
    Door:
        id: door4